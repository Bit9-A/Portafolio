---
const { t } = Astro.props;
---
<main id="hero" class="relative z-40 flex flex-1 flex-col items-center justify-center px-4 w-full min-h-[70vh] overflow-hidden bg-background-dark">
  <!-- Scanlines Overlay with reduced opacity for better clarity -->
  <div class="scanlines opacity-10"></div>

  <div class="flex flex-col items-center justify-center max-w-4xl text-center gap-8 relative z-20">
    <!-- Title Section -->
    <div class="flex flex-col items-center gap-4">
      <h1 class="text-6xl md:text-8xl lg:text-9xl font-bold font-grotesk text-white tracking-tighter leading-none select-none hover:neon-text-glow transition-all duration-500 cursor-default" aria-label={`${t('hero.title')} - ${t('hero.subtitle')}`}>
        ADRIAN <span class="text-primary/90">VERGEL</span>
      </h1>
      <!-- Typewriter Subtitle -->
      <div class="relative w-fit mx-auto mt-2" aria-hidden="true">
        <h2 class="text-base md:text-xl font-mono text-primary border-r-2 border-primary pr-2 whitespace-nowrap overflow-hidden animate-typewriter w-0">
          {t('hero.subtitle')}
        </h2>
      </div>
      <!-- Accessible alternative for screen readers -->
      <span class="sr-only">{t('hero.subtitle')}</span>
    </div>
    <!-- Tagline -->
    <p class="text-silver text-lg md:text-xl font-light tracking-wide max-w-2xl mt-4">
      {t('hero.tagline')}
    </p>

    <!-- Social Links -->
    <div class="flex items-center gap-6 mt-2">
      <a 
        href="https://github.com/Bit9-A" 
        target="_blank" 
        rel="noopener noreferrer"
        class="group flex items-center gap-2 px-4 py-2 rounded-lg bg-white/5 border border-white/10 hover:border-primary/30 transition-all duration-300"
      >
        <img src="https://cdn.simpleicons.org/github/white" alt="GitHub" class="w-5 h-5 opacity-70 group-hover:opacity-100 transition-opacity" />
        <span class="text-xs font-mono text-slate-400 group-hover:text-white transition-colors">GITHUB</span>
      </a>
      <a 
        href="https://www.linkedin.com/in/adrian-vergel-27908a331/" 
        target="_blank" 
        rel="noopener noreferrer"
        class="group flex items-center gap-2 px-4 py-2 rounded-lg bg-white/5 border border-white/10 hover:border-primary/30 transition-all duration-300"
      >
        <img src="https://img.icons8.com/?size=100&id=8808&format=png&color=FFFFFF" alt="LinkedIn" class="w-5 h-5 opacity-70 group-hover:opacity-100 transition-opacity" />
        <span class="text-xs font-mono text-slate-400 group-hover:text-white transition-colors">LINKEDIN</span>
      </a>
    </div>

    <!-- CTA Button -->
