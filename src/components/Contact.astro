---
const { t } = Astro.props;
---
<section id="contact" class="relative mt-4 py-8 md:py-12 border-t border-white/5">
    <div class="flex flex-col items-center text-center gap-8 max-w-3xl mx-auto px-4">
        <h2 class="text-4xl md:text-6xl font-black text-white tracking-tighter leading-tight">
            {t('contact.title')}<br/>
            <span class="text-transparent bg-clip-text bg-linear-to-r from-white via-primary to-primary/50">{t('contact.subtitle')}</span>
        </h2>
        <p class="text-slate-400 text-lg md:text-xl max-w-xl">
            {t('contact.desc')}
        </p>
        
        <div class="flex items-center gap-8 mt-4">
            <!-- Github -->
            <a href="https://github.com/Bit9-A" target="_blank" rel="noopener noreferrer" class="group flex flex-col items-center gap-2">
                <div class="w-16 h-16 rounded-2xl bg-white/5 border border-white/10 flex items-center justify-center group-hover:bg-primary/80 group-hover:scale-110 group-hover:shadow-neon transition-all duration-300">
                    <img src="https://cdn.simpleicons.org/github/white" alt="GitHub" class="w-8 h-8 opacity-70 group-hover:opacity-100 transition-opacity" />
                </div>
                <span class="text-xs font-medium text-slate-500 group-hover:text-primary transition-colors uppercase tracking-widest font-mono">GitHub</span>
            </a>
            
            <!-- LinkedIn -->
            <a href="https://www.linkedin.com/in/adrian-vergel-27908a331/" target="_blank" rel="noopener noreferrer" class="group flex flex-col items-center gap-2">
                <div class="w-16 h-16 rounded-2xl bg-white/5 border border-white/10 flex items-center justify-center group-hover:bg-primary/80 group-hover:scale-110 group-hover:shadow-neon transition-all duration-300">
                    <img src="https://img.icons8.com/?size=100&id=8808&format=png&color=FFFFFF" alt="LinkedIn" class="w-8 h-8 opacity-70 group-hover:opacity-100 transition-opacity" />
                </div>
                <span class="text-xs font-medium text-slate-500 group-hover:text-primary transition-colors uppercase tracking-widest font-mono">LinkedIn</span>
            </a>
            
            <!-- Email -->
            <div class="relative group flex flex-col items-center gap-2 cursor-pointer" id="copy-email">
                <div class="absolute -top-12 left-1/2 -translate-x-1/2 px-3 py-1.5 bg-primary text-black text-xs font-bold rounded opacity-0 group-hover:opacity-80 transition-opacity duration-200 pointer-events-none whitespace-nowrap shadow-neon z-50">
                    <span class="tooltip-text" data-copy={t('contact.copy')} data-copied={t('contact.copied')}>{t('contact.copy')}</span>
                    <div class="absolute -bottom-1 left-1/2 -translate-x-1/2 w-2 h-2 bg-primary rotate-45"></div>
                </div>
                <div class="w-16 h-16 rounded-2xl bg-white/5 border border-white/10 flex items-center justify-center text-white group-hover:bg-primary/80 group-hover:text-black group-hover:scale-110 group-hover:shadow-neon transition-all duration-300 active:scale-95">
                    <span class="material-symbols-outlined text-4xl">mail</span>
                </div>
                <span class="text-xs font-medium text-slate-500 group-hover:text-primary transition-colors uppercase tracking-widest font-mono">Email</span>
            </div>
        </div>

        <div class="mt-16 text-slate-600 text-sm font-medium">
            Â© <span id="year"></span> Adrian Vergel. {t('footer.built')}
        </div>
    </div>
</section>

<script is:inline>
    // Copy email logic
    const copyBtn = document.getElementById('copy-email');
    if (copyBtn) {
        copyBtn.addEventListener('click', () => {
            const email = "adrian.vergel@example.com";
            navigator.clipboard.writeText(email).then(() => {
                const tooltipText = copyBtn.querySelector('.tooltip-text');
                const originalText = tooltipText.getAttribute('data-copy');
                const copiedText = tooltipText.getAttribute('data-copied');
                tooltipText.textContent = copiedText;
                setTimeout(() => {
                    tooltipText.textContent = originalText;
                }, 2000);
            });
        });
    }

    // Update year
    const yearSpan = document.getElementById('year');
    if (yearSpan) {
        yearSpan.textContent = new Date().getFullYear();
    }
</script>
