---
const { t } = Astro.props;
---
<section id="experience" class="py-10 px-6 lg:px-20 relative bg-background-dark overflow-hidden border-t border-white/5">
  <div class="max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-16">
    
    <!-- LEFT SIDE: EXPERIENCE -->
    <div class="relative">
      <!-- Header -->
      <div class="mb-12">
        <div class="flex items-center gap-3 mb-4">
          <span class="material-symbols-outlined text-primary text-2xl">description</span>
          <h2 class="text-2xl font-bold text-white tracking-tight">
            {t('exp.title')} <span class="text-slate-500 font-mono text-lg">{t('exp.subtitle')}</span>
          </h2>
        </div>
      </div>

      <!-- Timeline -->
      <div class="relative border-l-2 border-primary/30 pl-8 space-y-12">
        <!-- Glow effect on timeline -->
        <div class="absolute left-0 top-0 bottom-0 w-0.5 bg-linear-to-b from-primary via-primary/50 to-transparent"></div>

        <!-- Experience Item 1 -->
        <div class="relative group">
          <!-- Timeline Node -->
          <div class="absolute -left-9.5 top-1 w-4 h-4 rounded-full border-2 border-primary bg-background-dark group-hover:bg-primary transition-colors duration-300 flex items-center justify-center">
            <div class="w-1.5 h-1.5 rounded-full bg-primary group-hover:bg-background-dark"></div>
          </div>

          <!-- Content Card -->
          <div class="glass-panel p-6 rounded-lg border border-white/5 hover:border-primary/30 transition-all duration-300">
            <div class="flex items-start justify-between mb-4 flex-wrap gap-2">
              <div>
                <h3 class="text-lg font-bold text-white mb-1">{t('exp.item1.company')}</h3>
                <div class="flex items-center gap-2 text-primary text-sm font-mono">
                  <span class="material-symbols-outlined text-base">code</span>
                  <span>{t('exp.item1.role')}</span>
                </div>
              </div>
              <span class="text-xs font-mono text-slate-500 bg-white/5 px-3 py-1 rounded border border-white/10">
                2025 - PRESENT
              </span>
            </div>
            
            <ul class="space-y-2 text-sm text-slate-400">
              <li class="flex items-start gap-2">
                <span class="text-primary mt-0.5">›</span>
                <span>{t('exp.item1.desc1')}</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-primary mt-0.5">›</span>
                <span>{t('exp.item1.desc2')}</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-primary mt-0.5">›</span>
                <span>{t('exp.item1.desc3')}</span>
              </li>
            </ul>
          </div>
        </div>

        <!-- Experience Item 2 -->
        <div class="relative group">
          <!-- Timeline Node -->
          <div class="absolute -left-9.5 top-1 w-4 h-4 rounded-full border-2 border-primary bg-background-dark group-hover:bg-primary transition-colors duration-300 flex items-center justify-center">
            <div class="w-1.5 h-1.5 rounded-full bg-primary group-hover:bg-background-dark"></div>
          </div>

          <!-- Content Card -->
          <div class="glass-panel p-6 rounded-lg border border-white/5 hover:border-primary/30 transition-all duration-300">
            <div class="flex items-start justify-between mb-4 flex-wrap gap-2">
              <div>
                <h3 class="text-lg font-bold text-white mb-1">{t('exp.item2.company')}</h3>
                <div class="flex items-center gap-2 text-primary text-sm font-mono">
                  <span class="material-symbols-outlined text-base">terminal</span>
                  <span>{t('exp.item2.role')}</span>
                </div>
              </div>
              <span class="text-xs font-mono text-slate-500 bg-white/5 px-3 py-1 rounded border border-white/10">
                2025 - PRESENT
              </span>
            </div>
            
            <ul class="space-y-2 text-sm text-slate-400">
              <li class="flex items-start gap-2">
                <span class="text-primary mt-0.5">›</span>
                <span>{t('exp.item2.desc1')}</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-primary mt-0.5">›</span>
                <span>{t('exp.item2.desc2')}</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-primary mt-0.5">›</span>
                <span>{t('exp.item2.desc3')}</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- RIGHT SIDE: STACK -->
    <div class="relative">
      <!-- Header -->
      <div class="mb-12">
        <div class="flex items-center gap-3 mb-4">
          <span class="material-symbols-outlined text-primary text-2xl">memory</span>
          <h2 class="text-2xl font-bold text-white tracking-tight">
            {t('stack.title')} <span class="text-slate-500 font-mono text-lg">{t('stack.subtitle')}</span>
          </h2>
        </div>
        
        <!-- Status Bar -->
        <div class="flex items-center justify-between text-[10px] font-mono text-primary/60 border-b border-primary/20 pb-2 mb-8">
          <span>{t('stack.status')}</span>
          <span>{t('stack.uptime')}</span>
        </div>
      </div>

      <!-- Tech Grid -->
      <div class="grid grid-cols-3 gap-4 mb-8">
        <!-- React -->
        <div class="tech-card glass-panel p-4 rounded-lg border border-white/5 hover:border-primary/30 transition-all duration-300 group flex flex-col items-center justify-center gap-3">
          <img src="https://cdn.simpleicons.org/react/61DAFB" alt="React" class="w-8 h-8 object-contain brightness-90 group-hover:brightness-110 group-hover:drop-shadow-[0_0_8px_rgba(97,218,251,0.5)] transition-all" />
          <span class="text-[10px] font-mono text-slate-400 group-hover:text-white transition-colors tracking-widest uppercase">REACT</span>
        </div>

        <!-- Node.js -->
        <div class="tech-card glass-panel p-4 rounded-lg border border-white/5 hover:border-primary/30 transition-all duration-300 group flex flex-col items-center justify-center gap-3">
          <img src="https://cdn.simpleicons.org/nodedotjs/339933" alt="Node.js" class="w-8 h-8 object-contain brightness-90 group-hover:brightness-110 group-hover:drop-shadow-[0_0_8px_rgba(51,153,51,0.5)] transition-all" />
          <span class="text-[10px] font-mono text-slate-400 group-hover:text-white transition-colors tracking-widest uppercase">NODE.JS</span>
        </div>

        <!-- TypeScript -->
        <div class="tech-card glass-panel p-4 rounded-lg border border-white/5 hover:border-primary/30 transition-all duration-300 group flex flex-col items-center justify-center gap-3">
          <img src="https://cdn.simpleicons.org/typescript/3178C6" alt="TypeScript" class="w-8 h-8 object-contain brightness-90 group-hover:brightness-110 group-hover:drop-shadow-[0_0_8px_rgba(49,120,198,0.5)] transition-all" />
          <span class="text-[10px] font-mono text-slate-400 group-hover:text-white transition-colors tracking-widest uppercase">TYPESCRIPT</span>
        </div>

        <!-- Next.js -->
        <div class="tech-card glass-panel p-4 rounded-lg border border-white/5 hover:border-primary/30 transition-all duration-300 group flex flex-col items-center justify-center gap-3">
          <img src="https://cdn.simpleicons.org/nextdotjs/white" alt="Next.js" class="w-8 h-8 object-contain brightness-90 group-hover:brightness-110 group-hover:drop-shadow-[0_0_8px_rgba(255,255,255,0.3)] transition-all" />
          <span class="text-[10px] font-mono text-slate-400 group-hover:text-white transition-colors tracking-widest uppercase">NEXT.JS</span>
        </div>

        <!-- Tailwind -->
        <div class="tech-card glass-panel p-4 rounded-lg border border-white/5 hover:border-primary/30 transition-all duration-300 group flex flex-col items-center justify-center gap-3">
          <img src="https://cdn.simpleicons.org/tailwindcss/06B6D4" alt="Tailwind" class="w-8 h-8 object-contain brightness-90 group-hover:brightness-110 group-hover:drop-shadow-[0_0_8px_rgba(6,182,212,0.5)] transition-all" />
          <span class="text-[10px] font-mono text-slate-400 group-hover:text-white transition-colors tracking-widest uppercase">TAILWIND</span>
        </div>

        <!-- PostgreSQL -->
        <div class="tech-card glass-panel p-4 rounded-lg border border-white/5 hover:border-primary/30 transition-all duration-300 group flex flex-col items-center justify-center gap-3">
          <img src="https://cdn.simpleicons.org/postgresql/4169E1" alt="PostgreSQL" class="w-8 h-8 object-contain brightness-90 group-hover:brightness-110 group-hover:drop-shadow-[0_0_8px_rgba(65,105,225,0.5)] transition-all" />
          <span class="text-[10px] font-mono text-slate-400 group-hover:text-white transition-colors tracking-widest uppercase">POSTGRES</span>
        </div>

        <!-- Docker -->
        <div class="tech-card glass-panel p-4 rounded-lg border border-white/5 hover:border-primary/30 transition-all duration-300 group flex flex-col items-center justify-center gap-3">
          <img src="https://cdn.simpleicons.org/docker/2496ED" alt="Docker" class="w-8 h-8 object-contain brightness-90 group-hover:brightness-110 group-hover:drop-shadow-[0_0_8px_rgba(36,150,237,0.5)] transition-all" />
          <span class="text-[10px] font-mono text-slate-400 group-hover:text-white transition-colors tracking-widest uppercase">DOCKER</span>
        </div>

        <!-- GraphQL -->
        <div class="tech-card glass-panel p-4 rounded-lg border border-white/5 hover:border-primary/30 transition-all duration-300 group flex flex-col items-center justify-center gap-3">
          <img src="https://cdn.simpleicons.org/graphql/E10098" alt="GraphQL" class="w-8 h-8 object-contain brightness-90 group-hover:brightness-110 group-hover:drop-shadow-[0_0_8px_rgba(225,0,152,0.5)] transition-all" />
          <span class="text-[10px] font-mono text-slate-400 group-hover:text-white transition-colors tracking-widest uppercase">GRAPHQL</span>
        </div>

        <!-- AWS -->
        <div class="tech-card glass-panel p-4 rounded-lg border border-white/5 hover:border-primary/30 transition-all duration-300 group flex flex-col items-center justify-center gap-3">
          <img src="https://img.icons8.com/?size=100&id=al1VlNCK9eK5&format=png&color=FFFFFF" alt="AWS" class="w-8 h-8 object-contain brightness-90 group-hover:brightness-110 group-hover:drop-shadow-[0_0_8px_rgba(255,153,0,0.5)] transition-all" />
          <span class="text-[10px] font-mono text-slate-400 group-hover:text-white transition-colors tracking-widest uppercase">AWS</span>
        </div>
      </div>

      <!-- Footer Info -->
      <div class="border-t border-white/5 pt-4">
        <div class="flex items-center justify-between">
          <div class="flex flex-col gap-1 text-[10px] font-mono text-slate-600">
            <span>LAT: 40.7128 | LON: -74.0060</span>
            <span>RENDER: 12ms</span>
          </div>
          <div class="flex gap-1">
            <div class="w-2 h-2 bg-slate-800 rounded-full animate-pulse"></div>
            <div class="w-2 h-2 bg-slate-800 rounded-full animate-pulse delay-75"></div>
            <div class="w-2 h-2 bg-primary rounded-full shadow-neon-sm animate-pulse delay-150"></div>
          </div>
        </div>
      </div>
    </div>

  </div>
</section>
